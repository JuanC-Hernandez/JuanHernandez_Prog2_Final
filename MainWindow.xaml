<Window x:Class="JuanHernandez_Prog2_Final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuanHernandez_Prog2_Final"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <ListView x:Name="Teams" Height="214" Width="473" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="23" Canvas.Top="59" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Conference"/>
                    <GridViewColumn Header="Team Name"/>
                    <GridViewColumn Header="City"/>
                    <GridViewColumn Header="Stadium"/>
                    <GridViewColumn Header="Manager"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Canvas>
</Window>
